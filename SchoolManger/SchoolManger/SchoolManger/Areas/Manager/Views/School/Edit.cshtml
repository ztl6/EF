@model SchoolManger.Models.School.SchoolEditModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
}
<div class="panel-heading">
    <h3 class="panel-title">修改身份</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            @using (Html.BeginForm("Edit", "School", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="id">编号:</label>
                    @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @readonly = "true" })
                </div>
                <div class="form-group">
                    <label for="posts">身份名称:</label>
                    @Html.TextBoxFor(p => p.Posts, new { @class = "form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(p => p.Posts)
                    </span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">提交</button>
                </div>
            }


        </div>
    </div>
</div>

@model SchoolManger.Models.School.SchoolAddModel
@{
    ViewBag.Title = "新增身份信息";
    Layout = "~/Areas/Manager/Views/Shared/_LayoutPage1.cshtml";
}

<div class="panel-heading">
    <h3 class="panel-title">新增身份信息</h3>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            @using (Html.BeginForm("Add", "School", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="posts">身份名称:</label>
                    @Html.TextBoxFor(p => p.posts, new { @class = "form-control" })
                    <span class="text-danger">
                        @Html.ValidationMessageFor(p => p.posts)
                    </span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">提交</button>
                </div>
            }


        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Content/assets/scripts/jquery.validate.js"></script>
    <script src="~/Content/assets/scripts/jquery.validate.unobtrusive.js"></script>
}

